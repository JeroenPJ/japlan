<h1><%= @article.title %></h1>
<% if @article.user == current_user %>
  <p><%= link_to "Edit this article", edit_article_path(@article) %> | <%= link_to "Delete this article", article_path(@article), method: :delete, confirm: "Are you sure you want to delete this article?" %></p>
<% end %>
<div>
  <%= @article.content.html_safe %>
</div>
